<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="#081108">

    <LinearLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:orientation="vertical">

        <!-- Username row with profile image -->
        <LinearLayout
            android:id="@+id/username_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_image_small"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Reply preview inside message item (hidden when not a reply) -->
        <LinearLayout
            android:id="@+id/reply_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            android:padding="6dp"
            android:background="#0B2A1A">

            <TextView
                android:id="@+id/reply_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/replying_to"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#CDEBDD"/>

            <TextView
                android:id="@+id/reply_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/original_message_preview"
                android:textSize="12sp"
                android:textColor="#E6F6EE"/>
        </LinearLayout>

        <!-- Inner CardView wrapping the Message Text -->
        <!-- NOTE: added id message_card so adapter can change layout_gravity/color -->
        <androidx.cardview.widget.CardView
            android:id="@+id/message_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:background="@drawable/chat_bubble">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/message_text"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:text="@string/date_time"
            android:textColor="#777"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
